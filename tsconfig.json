{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "classic",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "removeComments": false,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [
    "./src/main.ts"
  ],
  "exclude": [
    "node_modules/"
  ]
}